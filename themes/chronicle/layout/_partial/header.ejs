<header class="header" id="header">
  <div class="container header__inner">
    <a class="header__logo" href="<%- url_for('/') %>" aria-label="<%= config.title %>">
      <%= config.title %>
    </a>
    <%
      var defaultLang = 'en';
      var currentLang = (page && page.lang) || (Array.isArray(config.language) ? config.language[0] : (config.language || defaultLang));
      var otherLang = currentLang === 'zh-CN' ? 'en' : 'zh-CN';
      var switchText = otherLang === 'zh-CN' ? '中文' : 'EN';
    %>
    <button class="header__toggle" id="nav-toggle" aria-label="<%= __('toggle_navigation') %>">
      <span></span><span></span><span></span>
    </button>
    <nav class="header__nav" id="nav-menu">
      <% for (var key in theme.nav) { %>
        <a class="header__link" href="<%- url_for(theme.nav[key]) %>"><%= __(key) %></a>
      <% } %>
      <% if (theme.rss) { %>
        <a class="header__link header__link--rss" href="<%- url_for(theme.rss) %>" aria-label="RSS">RSS</a>
      <% } %>
      <button
        class="header__link header__link--lang"
        id="lang-switch"
        type="button"
        aria-label="<%= __('switch_lang') %>"
        data-default-lang="<%= defaultLang %>"
        data-current-lang="<%= currentLang %>"
        data-other-lang="<%= otherLang %>"
      ><%= switchText %></button>
    </nav>
  </div>
</header>
