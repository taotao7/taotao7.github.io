<section class="taxonomy">
  <% if (page.tag) { %>
    <% var tagPosts = filter_posts(page.posts); %>
    <%- partial('_partial/section-header', { title: '#' + page.tag, description: tagPosts.length + ' ' + __('posts_suffix') }) %>
    <div class="chronicle-list">
      <% tagPosts.sort('-date').forEach(function(post) { %>
        <%- partial('_partial/post-card', { item: post }) %>
      <% }) %>
    </div>
    <%- partial('_partial/pagination') %>
  <% } else { %>
    <%- partial('_partial/section-header', { title: __('tag'), description: '' }) %>
    <div class="tag-cloud">
      <% site.tags.forEach(function(tag) { %>
        <a class="tag-cloud__item" href="<%- url_for(tag.path) %>">
          <span class="tag-cloud__name"><%= tag.name %></span>
          <span class="tag-cloud__count"><%= tag.length %></span>
        </a>
      <% }) %>
    </div>
  <% } %>
</section>
